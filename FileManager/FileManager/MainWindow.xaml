<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="File Manager" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top" Height="18" Width="46" Click="BackButton_Click"/>
        <TextBox x:Name="FirstWindowOnFileManager" HorizontalAlignment="Left" Margin="21,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="494" Height="603"/>
        <TextBox x:Name="SecondWindowOnFileManager" HorizontalAlignment="Left" Margin="559,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="494" Height="603"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="1034,774,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ExitLabel" Content="Alt + F4 Exit" HorizontalAlignment="Left" Margin="979,733,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FirstTextPath" HorizontalAlignment="Left" Margin="112,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="403" Height="22"/>
        <TextBox x:Name="SecondtTextPath" HorizontalAlignment="Left" Margin="650,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="403" Height="21"/>
        <Button x:Name="NotepadButton" Content="Notepad" HorizontalAlignment="Left" Margin="1000,10,0,0" VerticalAlignment="Top" Height="32" Width="53" Click="NotepadButton_Click"/>
        <ComboBox x:Name="FirstDiskList" HorizontalAlignment="Left" Margin="21,62,0,0" VerticalAlignment="Top" Width="86" SelectionChanged="FirstDiskList_SelectionChanged" Height="21"/>
        <ComboBox x:Name="SecondDiskList" HorizontalAlignment="Left" Margin="559,63,0,0" VerticalAlignment="Top" Width="86" SelectionChanged="SecondDiskList_SelectionChanged" Height="21"/>

    </Grid>
</Window>
